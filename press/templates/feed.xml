<rss version="2.0">
  <channel>
    <title>{{site_title}}</title>
    <description>{{site_description}}</description>
    <link>{{site_link}}</link>
    {{#items}}
    <item>
      <title>{{title}}</title>
      <description><![CDATA[
      {{content}}
      ]]></description>
      <pubDate>{{date}}</pubDate>
      <guid isPermaLink="true">{{permalink}}</guid>
      <link>{{permalink}}</link>
    </item>
    {{/items}}
  </channel>
</rss>
